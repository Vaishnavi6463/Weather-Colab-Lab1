import math

def calculate_lcm(a, b):
    if a == 0 or b == 0:
        return 0
    gcd = math.gcd(a, b)
    lcm = abs(a * b) 
    return lcm


num1 = int(input("Enter the variable 1 value :"))
num2 = int(input("Enter the variable 2 value :"))
result = calculate_lcm(num1, num2)
print(f"The LCM of {num1} and {num2} is {result}.")
